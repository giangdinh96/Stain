<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:textColor">@color/colorTextDefault</item>

        <item name="android:windowTranslucentStatus" tools:targetApi="kitkat">true</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Font family -->
    <style name="BaseText" parent="TextAppearance.AppCompat" />

    <style name="TextNormal" parent="BaseText">
        <item name="fontPath">fonts/BeVietnam-Regular.ttf</item>
    </style>

    <style name="TextNormalItalic" parent="BaseText">
        <item name="fontPath">fonts/BeVietnam-RegularItalic.ttf</item>
    </style>

    <style name="TextMedium" parent="BaseText">
        <item name="fontPath">fonts/BeVietnam-Medium.ttf</item>
    </style>

    <style name="TextMediumItalic" parent="BaseText">
        <item name="fontPath">fonts/BeVietnam-MediumItalic.ttf</item>
    </style>

    <style name="TextBold" parent="BaseText">
        <item name="fontPath">fonts/BeVietnam-Bold.ttf</item>
    </style>

    <style name="TextBoldItalic" parent="BaseText">
        <item name="fontPath">fonts/BeVietnam-BoldItalic.ttf</item>
    </style>

    <!--Style for toolbar-->
    <style name="TextActionToolbar">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/common_text_size</item>
        <item name="android:textAppearance">@style/TextMedium</item>
    </style>

    <style name="TextTitleToolbar">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/l_text_size</item>
        <item name="android:textAppearance">@style/TextBold</item>
    </style>

    <style name="TextBottomNavigationMenuActive" parent="TextBold">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="TextBottomNavigationMenuInActive" parent="TextBold">
        <item name="android:textSize">10sp</item>
    </style>
</resources>
